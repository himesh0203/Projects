Setup
Requirements:
pip install SpeechRecognition googletrans==4.0.0-rc1 pyttsx3 pyaudio
Note: pyaudio may require system-specific installation (on Linux: sudo apt-get install portaudio19-dev).


import speech_recognition as sr
from googletrans import Translator
import pyttsx3

# Initialize translator and TTS engine
translator = Translator()
tts = pyttsx3.init()

# Configure TTS voice (optional)
voices = tts.getProperty('voices')
tts.setProperty('voice', voices[0].id)  # change index for different voices

def translate_and_speak(text, target_lang="fr"):
    """Translate text and speak it aloud."""
    try:
        translated = translator.translate(text, dest=target_lang)
        print(f"Original: {text}")
        print(f"Translated ({target_lang}): {translated.text}")
        tts.say(translated.text)
        tts.runAndWait()
    except Exception as e:
        print("Translation error:", e)

def listen_and_translate(target_lang="fr"):
    """Continuously listen to microphone and translate speech."""
    recognizer = sr.Recognizer()
    mic = sr.Microphone()

    with mic as source:
        recognizer.adjust_for_ambient_noise(source)
        print("ðŸŽ¤ Listening... Speak now!")

        while True:
            try:
                audio = recognizer.listen(source)
                text = recognizer.recognize_google(audio)
                translate_and_speak(text, target_lang=target_lang)
            except sr.UnknownValueError:
                print("Could not understand audio.")
            except sr.RequestError as e:
                print("Speech recognition error:", e)

if __name__ == "__main__":
    # Example: translate English speech into French
    listen_and_translate(target_lang="fr")



