# mood_playlist.py
# A fun Python script that suggests a playlist based on your mood or text.

from textblob import TextBlob
import random

# Some predefined playlists
playlists = {
    "happy": ["Happy â€“ Pharrell Williams", "Good Life â€“ Kanye West", "Uptown Funk â€“ Bruno Mars", "Canâ€™t Stop the Feeling â€“ Justin Timberlake"],
    "sad": ["Someone Like You â€“ Adele", "Fix You â€“ Coldplay", "Let Her Go â€“ Passenger", "Skinny Love â€“ Bon Iver"],
    "angry": ["Lose Yourself â€“ Eminem", "Killing in the Name â€“ Rage Against the Machine", "Break Stuff â€“ Limp Bizkit", "Smells Like Teen Spirit â€“ Nirvana"],
    "relaxed": ["Weightless â€“ Marconi Union", "Breezeblocks â€“ Alt-J", "Banana Pancakes â€“ Jack Johnson", "Holocene â€“ Bon Iver"],
    "neutral": ["Electric Feel â€“ MGMT", "Midnight City â€“ M83", "Dreams â€“ Fleetwood Mac", "Yellow â€“ Coldplay"]
}

def get_mood(text):
    """Analyze text and determine mood using sentiment polarity."""
    blob = TextBlob(text)
    sentiment = blob.sentiment.polarity

    if sentiment > 0.5:
        return "happy"
    elif sentiment < -0.3:
        return "sad"
    elif -0.3 <= sentiment <= 0.3:
        return "neutral"
    else:
        return "relaxed"

def generate_playlist(mood):
    """Return a random selection of songs for the given mood."""
    songs = playlists.get(mood, playlists["neutral"])
    random.shuffle(songs)
    return songs[:3]

if __name__ == "__main__":
    print("ðŸŽ§ Welcome to the Mood-based Playlist Generator ðŸŽ¶")
    user_input = input("How are you feeling today (or describe your day)?\n> ")

    mood = get_mood(user_input)
    songs = generate_playlist(mood)

    print(f"\nDetected mood: {mood.capitalize()}")
    print("Here's your personalized playlist:")
    for song in songs:
        print(f" - {song}")

    print("\nEnjoy your music! ðŸŽµ")
