from sklearn.linear_model import LinearRegression
import pandas as pd
import numpy as np

# Placeholder data
df = pd.read_csv("agriculture_data.csv")  # columns: ['Rainfall', 'Temperature', 'Soil_quality', 'Yield']

X = df[['Rainfall', 'Temperature', 'Soil_quality']]
y = df['Yield']

model = LinearRegression()
model.fit(X, y)

# Predict yield for new data
new_data = pd.DataFrame({'Rainfall':[200], 'Temperature':[30], 'Soil_quality':[7]})
predicted_yield = model.predict(new_data)
print(f"Predicted crop yield: {predicted_yield[0]:.2f} tons/ha")
